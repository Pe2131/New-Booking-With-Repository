@model Tbl_Country
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title">Blank</h4>
                    </li>
                    <li class="breadcrumb-item bcrumb-1">
                        <a href="/Country">
                            <i class="fas fa-home"></i> Countries
                        </a>
                    </li>
                    <li class="breadcrumb-item bcrumb-2">
                        <a href="javascript:void(0);">Manage Forms</a>
                    </li>
                    <li class="breadcrumb-item active">Create Country</li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            @if (TempData["Style"] != null)
                            {
                                <div class="@TempData["Style"]">
                                    @TempData["Message"]
                                </div>
                            }
                            <div class="header">
                                <h2>
                                    <strong> Contry Form</strong>
                                </h2>
                            </div>
                            <form asp-controller="Country" asp-action="Create" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                <input type="text" name="Name" asp-for="Name" class="form-control">
                                                <label class="form-label" asp-for="Name">Country Name</label>
                                            </div>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                <input type="text" name="Code" asp-for="Code" class="form-control">
                                                <label class="form-label" asp-for="Code">Country Code</label>
                                            </div>
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                        <div class="file-field input-field">
                                            <div class="btn">
                                                <span>File</span>
                                                <input type="file" name="Image" onchange="ShowPreview(this)">
                                            </div>
                                            <div class="file-path-wrapper">
                                                <input class="file-path validate" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="ccol-lg-4 col-md-4 col-sm-4 col-xs-4 pull-right">
                                        <img id="ImgPrev" style="width:323px;height:168px;" src="~/Images/notimage.png" />
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-success waves-effect">
                                    <i class="material-icons">save</i>
                                    <span>Save</span>
                                </button>
                                <a href="/Country/" class="btn btn-info waves-effect">
                                    <i class="material-icons">arrow_back</i>
                                    <span>Back</span>
                                </a>

                            </form>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        function ShowPreview(input) {
            if (input.files && input.files[0]) {
                var ImageDir = new FileReader();
                ImageDir.onload = function (e) {
                    $('#ImgPrev').attr('src', e.target.result);

                }
                ImageDir.readAsDataURL(input.files[0]);

            }

        }
    </script>
}
