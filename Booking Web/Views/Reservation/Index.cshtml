@model List<ViewModel_PathWay>
@{
    ViewData["Title"] = "Pathway Reserv";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Styles{
    <link href="~/assets/css/form.min.css" rel="stylesheet">
    <link href="~/css/StyleReservation.css" rel="stylesheet">
    <!-- Colorpicker Css -->
    <link href="~/assets/js/bundles/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.css" rel="stylesheet" />
    <!-- Multi Select Css -->
    <link href="~/assets/js/bundles/multiselect/css/multi-select.css" rel="stylesheet">
}
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title">Routes</h4>
                    </li>
                    <li class="breadcrumb-item bcrumb-1">
                        <a href="/Account/index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="breadcrumb-item bcrumb-2">
                        <a href="javascript:void(0);">Manage Forms</a>
                    </li>
                    <li class="breadcrumb-item active">Manage Routes</li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row clearfix js-sweetalert">
                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2" style=" padding-left:0px;">
                        <div class="card">
                            <div class="boxs mail_listing">
                                <div class="inbox-center table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th colspan="1">
                                                    <div class="inbox-header">
                                                        Search in Available Routes
                                                    </div>
                                                </th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form class="composeForm">

                                            <select id="city1" class="form-group col-12" placeholder="Subject">
                                                @foreach (var item in ViewBag.cities)
                                                {
                                                    <option value="@item.Id">@item.name</option>
                                                }
                                            </select>

                                            <select id="city2" class="form-group col-12" placeholder="Subject">
                                                @foreach (var item in ViewBag.cities)
                                                {
                                                    <option value="@item.Id">@item.name</option>
                                                }
                                            </select>

                                            <input type="text" class="datepicker form-control" id="date" placeholder="Please choose a date..." data-dtp="dtp_fyrYG">
                                            <input type="number" name="Adult" id="count" class="form-control" min="0"
                                                   placeholder="Enter Count">
                                        </form>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="m-l-25 m-b-20">
                                            <button type="button" class="btn btn-info btn-border-radius waves-effect" onclick="Search()">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12" style=" padding-left:0px;">
                        <div class="card">
                            @if (TempData["Style"] != null)
                            {
                                <div class="@TempData[" Style"]">
                                    @TempData["Message"]
                                </div>
                            }
                            <div class="header">
                                <h2 class="co-md-6 col-lg-6">
                                    <strong>Active Routes</strong>
                                </h2>
                            </div>
                            <!--for active path-->
                            <div class="body table-responsive" id="tableContainer">
                                <table class="table table-bordered table-striped table-hover js-basic-example dataTable" style="text-align:center;font-size:13px;">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Source</th>
                                            <th>Destination</th>
                                            <th>start Time</th>
                                            <th>arrive Time</th>
                                            <th>Price For Adult</th>
                                            <th>Price For Baby</th>
                                            <th>status</th>
                                            <th>Capasity</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    @if (Model.Any())
                                    {
                                        int count = 1;

                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr id="@item.id-R">
                                                    <th scope="row">@(count++)</th>
                                                    <td>@item.GetSourceName</td>
                                                    <td>@item.GetDestinationName</td>
                                                    <td>@item.StartDate</td>
                                                    <td>@item.ArrivalDate</td>
                                                    <td>@item.PriceForAdultUro € - @item.PriceForAdultDollar $ </td>
                                                    <td>@item.PriceForBabyUro € - @item.PriceForBabyDollar $</td>
                                                    <td>
                                                        @item.Status
                                                    </td>
                                                    <td>
                                                        @item.Capacity
                                                    </td>
                                                    <td>
                                                        <button id="@item.id" class="btn tblActnBtn" onclick="openReservForm(@item.id)">
                                                            <i class="material-icons">playlist_add_check</i>
                                                        </button>
                                                    </td>

                                                </tr>
                                            }

                                        </tbody>
                                    }

                                </table>
                            </div>
                            <div class="preloader pl-size-xl" id="preloader" style="display:none;margin-left:48%;">
                                <div class="spinner-layer pl-teal">
                                    <div class="circle-clipper left">
                                        <div class="circle"></div>
                                    </div>
                                    <div class="circle-clipper right">
                                        <div class="circle"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Your content goes here  -->
        </div>
    </div>
</div>
<div id="ModalShow">
    <div class="modal fade" id="reserv" tabindex="-1" role="dialog" aria-labelledby="exampleModalGrid"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">Reserv Form</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalContent">
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/assets/js/table.min.js"></script>
    <script src="~/assets/js/pages/tables/jquery-datatable.js"></script>
    <script src="~/assets/js/form.min.js"></script>
    <script src="~/assets/js/pages/forms/basic-form-elements.js"></script>
    <script src="~/assets/js/bundles/multiselect/js/jquery.multi-select.js"></script>
    <script src="~/assets/js/bundles/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.js"></script>
    <script src="~/assets/js/pages/forms/advanced-form-elements.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function openReservForm(id) {
            $.ajax({
                url: "/Reservation/ReservForm/" + id,
                type: "Get",
                AllowCache: false
            }).done(function (res) {
                // $("#modalContent").empty();
                $("#modalContent").append(res);
                $('#reserv').modal('show');
                $('#SumCount').text(0);
                $('#SumPrice').text(0.0);
            });

        }
        function Search() {
            $("#tableContainer").empty();
            $("#preloader").show();
            var city1 = $('#city1').val();
            var city2 = $('#city2').val();
            var date = $('#date').val();
            var count = $('#count').val();
            $.ajax({
                url: "/PathWay/SearchPath/",
                type: "POST",
                data: { source: city1, dest: city2, date: date, count: count },
                AllowCache: false
            }).done(function (res) {
                $("#preloader").hide();
                $("#tableContainer").append(res);
            });

        }
    </script>
}

