@model ViewModel_BookDetail
@{
    ViewData["Title"] = "bookForm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title">Reservation</h4>
                    </li>
                    <li class="breadcrumb-item bcrumb-1">
                        <a href="/Reservation/">
                            <i class="fas fa-home"></i> Reservation
                        </a>
                    </li>
                    <li class="breadcrumb-item bcrumb-2">
                        <a href="javascript:void(0);">Booking Form</a>
                    </li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card" style="padding:20px;">
                            @if (TempData["Style"] != null)
                            {
                                <div class="@TempData["Style"]">
                                    @TempData["Message"]
                                </div>
                            }
                        <form class="payment-form-wrapper" asp-action="confirmation" asp-controller="Reservation" method="post">
                            <input type="hidden" name="RoutId" value=@ViewBag.RoutId />
                            <input type="hidden" name="sumcount" value=@ViewBag.count />
                            <input type="hidden" name="adultcount" value=@ViewBag.adult />
                            <input type="hidden" name="childcount" value=@ViewBag.Child />
                            <input type="hidden" name="child2count" value=@ViewBag.Child2 />
                            <input type="hidden" name="child7count" value=@ViewBag.Child7 />
                            <input type="hidden" name="studentCount" value=@ViewBag.Student />
                            <input type="hidden" name="tripDate" value=@ViewBag.tripDate />
                            <input type="hidden" name="backdate" value=@ViewBag.backdate />
                            <input type="hidden" name="backwayRoutId" value=@ViewBag.backwayRoutId />
                            <h3 class="heading-title"><span>Billing Information</span></h3>
                            <p class="post-heading">Two before narrow not relied how except moment myself.</p>

                            <div class="bg-white-shadow pt-25 ph-30">
                                <div class="row gap-20 mb-0">

                                    <div class="col-12 col-sm-12">
                                        <div class="form-group">
                                            <label>Full name <span class="font12 text-danger">*</span></label>
                                            <input type="text" class="form-control form-bg-light" name="Fullname" required>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Email <span class="font12 text-danger">*</span></label>
                                            <input type="email" class="form-control form-bg-light" name="Email" required>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Mobile<span class="font12 text-danger">*</span></label>
                                            <input type="text" class="form-control form-bg-light" name="Mobile" required>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <div class="mb-40"></div>
                            <div class="bg-white-shadow pt-25 ph-30">

                                <h6>Adult name</h6>
                                <div class="row gap-20 mb-0">
                                    @for (int i = 0; i < ViewBag.adult; i++)
                                    {
                                        <div class="col-12 col-sm-6">
                                            <div class="form-group">
                                                <label>Adult Name<span class="font12 text-danger">*</span></label>
                                                <input type="text" name="adult[@i]" class="form-control form-bg-light" placeholder="please enter adult name" required>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <hr class="mt-20 mb-30">
                                @if (ViewBag.Child > 0)
                                {
                                    <h6>Child</h6>
                                    <div class="row gap-20 mb-0">
                                        @for (int i = 0; i < ViewBag.Child; i++)
                                        {
                                            <div class="col-12 col-sm-6">
                                                <div class="form-group">
                                                    <label>child name<span class="font12 text-danger">*</span></label>
                                                    <input type="text" name="child[@i]" class="form-control form-bg-light" placeholder="please enter child(0-2) name" required>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <hr class="mt-20 mb-30">
                                }
                                @if (ViewBag.child2 > 0)
                                {
                                    <h6>Child (2-7)</h6>
                                    <div class="row gap-20 mb-0">
                                        @for (int i = 0; i < ViewBag.child2; i++)
                                        {
                                            <div class="col-12 col-sm-6">
                                                <div class="form-group">
                                                    <label>child name<span class="font12 text-danger">*</span></label>
                                                    <input type="text" name="child2[@i]" class="form-control form-bg-light" placeholder="please enter child(2-7) name" required>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <hr class="mt-20 mb-30">
                                }
                                @if (ViewBag.child7 > 0)
                                {
                                    <h6>Child (7-12)</h6>
                                    <div class="row gap-20 mb-0">
                                        @for (int i = 0; i < ViewBag.child7; i++)
                                        {
                                            <div class="col-12 col-sm-6">
                                                <div class="form-group">
                                                    <label>child name<span class="font12 text-danger">*</span></label>
                                                    <input type="text" name="child7[@i]" class="form-control form-bg-light" placeholder="please enter child(7-12) name" required>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <hr class="mt-20 mb-30">
                                }
                                @if (ViewBag.student > 0)
                                {
                                    <h6>Student</h6>
                                    <div class="row gap-20 mb-0">
                                        @for (int i = 0; i < ViewBag.student; i++)
                                        {
                                            <div class="col-12 col-sm-6">
                                                <div class="form-group">
                                                    <label>student or retire<span class="font12 text-danger">*</span></label>
                                                    <input type="text" name="student[@i]" class="form-control form-bg-light" placeholder="please enter student name" required>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }

                            </div>
                            <div class="mb-40"></div>
                            <button type="submit" class="btn btn-primary mt-20">Book now <i class="fa fa-long-arrow-right"></i></button>

                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


