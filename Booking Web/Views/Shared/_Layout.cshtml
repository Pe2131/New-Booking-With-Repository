    <a id="back-to-top" href="#" class="back-to-top" role="button" title="Върни се най-горе" data-toggle="tooltip" data-placement="left"><i class="bx bx-chevron-up"></i></a>
    <!-- end Back To Top -->
    <!------------ JS  ------------------>
    <script type="text/javascript" src="~/Home/js/jquery-2.2.4.min.js"></script>
    <script type="text/javascript" src="~/Home/js/plugins.js"></script>
    <script type="text/javascript" src="~/Home/js/custom-core.js"></script>
    <script type="text/javascript" src="~/Home/js/plugins/jquery.typeahead.min.js"></script>
    <script type="text/javascript" src="~/Home/js/custom-autocomplete.js"></script>
    <script src="~/Home/js/Notify.min.js"></script>
    <script>
        function addnewsletter() {

            var email = $('#Newsletter').val();
            if (email != null && email != '') {

                $.ajax({
                    url: "/Home/insertEmail",
                    type: "Post",
                    data: { Email: email },
                    cache: false
                }).done(function (res) {

                    console.log(res);
                    $("#Newsletter").notify(

                        res, "success",
                        {
                            autoHideDelay: 100000,
                            position: "bottom"
                        }
                    );
                });

            }
            else {
                $("#Newsletter").notify(
                    "please insert your email!", "warn",
                    {
                        autoHideDelay: 100000,
                        position: "bottom"
                    }
                );
            }
        }
    </script>
    @RenderSection("Scripts", false)
</body>

</html>
