@model ViewModel_Search
@{
    ViewData["Title"] = "Show Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="page-wrapper bg-light-primary">

    <div class="container">

        <div class="row gap-20 gap-md-30 gap-xl-40">


            <div class="col-12 col-lg-12">

                <div class="content-wrapper">

                    <div class="d-lg-flex mb-30 mb-lg-0">
                        <div>
                            <h3 class="heading-title"><span>Flights <span class="text-lowercase">in</span> </span> <span class="text-primary">Rome, Italy</span></h3>
                        </div>
                        <div class="ml-auto">
                            <button class="btn btn-secondary btn-wide btn-toggle collapsed btn-sm btn-change-search" data-toggle="collapse" data-target="#change-search"></button>
                        </div>
                    </div>

                    <div id="change-search" class="collapse">
                        <div class="change-search-wrapper">

                            <form asp-controller="Home" asp-action="Search" method="post" onsubmit="SumCount()">

                                <div class="form-inner">

                                    <div class="mb-10">



                                    </div>

                                    <div id="airDatepickerRange-flight" class="row gap-10 gap-md-20 mb-15">

                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>From</label>
                                                <div class="form-icon-left">
                                                    <span class="icon-font text-muted"><span class="icon-inner"><i class="bx bx-map"></i></span></span>
                                                    <select data-placeholder="Please select" class="chosen-no-search form-control" tabindex="2" name="source">
                                                        <option></option>
                                                        @foreach (var item in Model.cities)
                                                        {
                                                            <option value="@item.Id">@item.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>To</label>
                                                <div class="form-icon-left">
                                                    <span class="icon-font text-muted"><span class="icon-inner"><i class="bx bx-map"></i></span></span>
                                                    <select data-placeholder="Please select" class="chosen-no-search form-control" tabindex="2" name="dest">
                                                        <option></option>
                                                        @foreach (var item in Model.cities)
                                                        {
                                                            <option value="@item.Id">@item.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-6 col-md-6">
                                            <div class="form-group">
                                                <label>Departure</label>
                                                <div class="form-icon-left">
                                                    <span class="icon-font text-muted"><i class="bx bx-calendar"></i></span>
                                                    <input type="text" id="dateStart-flight" class="form-control form-readonly-control" placeholder="dd/mm/yyyy" name="date">
                                                </div>
                                            </div>
                                        </div>



                                        <div class="col-12 col-md-6">
                                            <div class="col-inner">
                                                <div class="row gap-2 gap-md-10">
                                                    <div class="col-4">
                                                        <div class="form-group form-spin-group">
                                                            <label for="room-amount">Adult <small class="text-muted font10 line-1">(12-75)</small></label>
                                                            <div class="form-icon-left">
                                                                <span class="icon-font text-muted"><i class="bx bx-user"></i></span>
                                                                <input type="text" class="form-control touch-spin-03 form-readonly-control" placeholder="0" readonly id="adult" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-4">
                                                        <div class="form-group form-spin-group">
                                                            <label for="room-amount">Child <small class="text-muted font10 line-1">(2-12)</small></label>
                                                            <div class="form-icon-left">
                                                                <span class="icon-font text-muted"><i class="bx bx-user"></i></span>
                                                                <input type="text" class="form-control touch-spin-03 form-readonly-control" placeholder="0" readonly id="child" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-4">
                                                        <div class="form-group form-spin-group">
                                                            <label for="room-amount">Infant <small class="text-muted font10 line-1">(0-2)</small></label>
                                                            <div class="form-icon-left">
                                                                <span class="icon-font text-muted"><i class="bx bx-user"></i></span>
                                                                <input type="text" class="form-control touch-spin-03 form-readonly-control" placeholder="0" readonly />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="hidden" id="count" name="count" />
                                    </div>

                                    <div class="d-flex flex-column flex-sm-row align-items-sm-center border-top mt-20 pt-20">
                                        <div class="mr-auto">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="flightSearchCheck-1" />
                                                @*<label class="custom-control-label" for="flightSearchCheck-1">(-/+ 3 days)</label>*@
                                            </div>
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-primary btn-wide">Search now</button>
                                        </div>
                                    </div>

                                </div>

                            </form>

                        </div>


                    </div>


                    <div class="product-long-item-wrapper">
                        @foreach (var item in Model.PathWays)
                        {
                            <div class="product-long-item">

                                <div class="row equal-height shrink-auto-md gap-15">

                                    <div class="col-12 col-shrink">

                                        <div class="image height-auto">
                                            <img src="~/Files/Images/Citis/@Model.cities.Where(a=>a.Id==item.Destination_FG).SingleOrDefault().Image" alt="images">
                                        </div>

                                    </div>

                                    <div class="col-12 col-auto">

                                        <div class="col-inner d-flex flex-column">

                                            <div class="content-top">

                                                <div class="d-flex">

                                                    <div>

                                                    
                                                        <h5><a href="#">@item.GetSourceName To @item.GetDestinationName</a></h5>


                                                    </div>

                                                    <div class="ml-auto">
                                                        <div class="price">

                                                            <span class="text-secondary">$ @item.Price</span>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>

                                            <div class="content">
                                                <p>New the her nor case that lady paid read eat everything the out two...</p>
                                            </div>
                                            @{
                                                // for get name day of week
                                                var departurdays = string.Join(",",
                                                from g in item.DepartureDays.Split(new char[] { ',' })
                                                select Enum.GetName(typeof(DayOfWeek), Convert.ToInt32(g)));
                                   
                                            }
                                            <div class="content-bottom mt-auto">
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <p><i class="far fa-clock mt-10"></i><strong>@departurdays</strong> &nbsp;  &nbsp;<strong>every week</strong></p>
                                                    </div>
                                                    <div class="ml-auto">
                                                        <a href="~/Home/Book/@item.id" class="btn btn-primary btn-sm btn-wide">Book</a>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </div>

                            </div>
                        }


                    </div>

                    <div class="pager-wrappper mt-40">

                        <div class="pager-innner">

                            <div class="row align-items-center text-center text-md-left">

                                <div class="col-12 col-md-5">
                                    @if (Model.PathWays.Any())
                                    {
                                        <span>@Model.PathWays.Count() results found</span>
                                    }
                                    else
                                    {
                                        <span>0 results found</span>
                                    }
                                </div>


                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</section>
@section Scripts{
    <script type="text/javascript" src="~/Home/js/custom-core.js"></script>
    <script type="text/javascript" src="~/Home/js/plugins.js"></script>
    <script type="text/javascript" src="~/Home/js/plugins/jquery.typeahead.min.js"></script>
    <script type="text/javascript" src="~/Home/js/custom-autocomplete.js"></script>

    <script>
        function SumCount() {
            var countadult = parseInt($('#adult').val());
            var countbaybe = parseInt($('#child').val());
            var count = countadult + countbaybe;
            $('#count').val(count);
        }
    </script>
}

