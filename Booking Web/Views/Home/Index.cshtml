@model ViewModel_Index;
@{
    ViewData["Title"] = "Home Page";
}
<!-- start Hero Banner -->
<div class="hero-banner hero-flex" data-dark-overlay="4" id="hero-banner">

    <div class="hero-inner hero-flex set-height-03">

        <div class="container hero-middle">

            <div class="row gap-60 gap-lg-100 align-items-center">
                <div class="col-12 col-md-9 col-lg-6 col-xl-5">

                    <div class="menu-horizontal-wrapper-02">

                        <nav class="menu-horizontal-02">



                            <a href="#formSearchMain-02" style="color: #fff;">Flight</a>



                        </nav>

                        <div class="tab-content">


                            <div role="tabpanel" class="tab-pane active" id="formSearchMain-02">

                                <div class="tab-inner menu-horizontal-content">

                                    <div class="form-search-main-01">

                                        <form asp-controller="Home" asp-action="Search" method="post" onsubmit="SumCount()">

                                            <div class="form-inner">

                                                <div class="mb-10">

                                                    <span>test test test test</span>

                                                </div>

                                                <div class="row gap-10 mb-15">

                                                    <div class="col-6">
                                                        <div class="form-group">
                                                            <label>From</label>
                                                            <div class="form-icon-left">
                                                                <span class="icon-font text-muted"><span class="icon-inner"><i class="bx bx-map"></i></span></span>
                                                                <select data-placeholder="Please select" class="chosen-no-search form-control" tabindex="2" name="source" id="FromCity" onchange="GetDestination()">
                                                                    <option></option>
                                                                    @foreach (var item in Model.cities)
                                                                    {
                                                                        <option value="@item.Id">@item.Name</option>
                                                                    }
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-6">
                                                        <div class="form-group">
                                                            <label>To</label>
                                                            <div class="form-icon-left">
                                                                <span class="icon-font text-muted"><span class="icon-inner"><i class="bx bx-map"></i></span></span>
                                                                <select data-placeholder="Please select" class="chosen-no-search form-control" tabindex="2" name="dest" id="To"></select>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-12">
                                                        <div class="col-inner">
                                                            <div id="airDatepickerRange-flight" class="row gap-10 mb-15">

                                                                <div class="col-12">
                                                                    <div class="form-group">
                                                                        <label>Check-in</label>
                                                                        <div class="form-icon-left">
                                                                            <span class="icon-font text-muted"><i class="bx bx-calendar"></i></span>
                                                                            <input type="text" id="dateStart-flight" class="form-control form-readonly-control" placeholder="dd/mm/yyyy" name="date">
                                                                        </div>
                                                                    </div>
                                                                </div>


                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-12">
                                                        <div class="col-inner">
                                                            <div class="row gap-5">
                                                                <div class="col-4">
                                                                    <div class="form-group form-spin-group">
                                                                        <label for="room-amount">Adult <small class="text-muted font10 line-1">(12-75)</small></label>
                                                                        <div class="form-icon-left">
                                                                            <span class="icon-font text-muted"><i class="bx bx-user"></i></span>
                                                                            <input type="text" class="form-control touch-spin-03 form-readonly-control" placeholder="0" readonly id="adult" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-4">
                                                                    <div class="form-group form-spin-group">
                                                                        <label for="room-amount">Child <small class="text-muted font10 line-1">(2-12)</small></label>
                                                                        <div class="form-icon-left">
                                                                            <span class="icon-font text-muted"><i class="bx bx-user"></i></span>
                                                                            <input type="text" class="form-control touch-spin-03 form-readonly-control" placeholder="0" readonly id="child" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-4">
                                                                    <div class="form-group form-spin-group">
                                                                        <label for="room-amount">Infant <small class="text-muted font10 line-1">(0-2)</small></label>
                                                                        <div class="form-icon-left">
                                                                            <span class="icon-font text-muted"><i class="bx bx-user"></i></span>
                                                                            <input type="text" class="form-control touch-spin-03 form-readonly-control" placeholder="0" readonly />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <input type="hidden" id="count" name="count" />

                                                </div>

                                                <div class="d-flex flex-row align-items-center mt-20">
                                                    <!--
                                                    <div class="mr-auto">
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="flightSearchCheck-1" />
                                                            <label class="custom-control-label" for="flightSearchCheck-1">(-/+ 3 days)</label>
                                                        </div>
                                                    </div>
                                                    -->
                                                    <div>
                                                        <button type="submit" class="btn btn-primary btn-wide">Search now </button>
                                                    </div>
                                                </div>

                                            </div>

                                        </form>

                                    </div>

                                </div>

                            </div>
                        </div>

                    </div>

                </div>

                <div class="col-12 col-lg-6 col-xl-7">

                    <div id="imgdiv" style="width: 100%;height: 400px;border: 1px solid;background: gray;">


                    </div>

                </div>



            </div>

        </div>

    </div>

</div>
<!-- end Hero Banner -->
<!-- start Site Content -->
<section>

    <div class="container">

        <div class="section-title text-center">

            <h2>Our Top Destinations</h2>

        </div>

        <div class="row cols-2 cols-md-3 cols-lg-4 gap-10 gap-md-20">
            @foreach (var item in Model.cities.Where(a => a.ShowInSlider == true))
            {

                <div class="col-6 col-lg-3">

                    <figure class="image-caption-01">

                        <a href="#">

                            <div class="image overlay-relative caption-relative">
                                <img src="~/Files/Images/Citis/@item.Image" alt="@item.Name" style="width:253px;height:253px;">
                                <div class="overlay-holder opacity-2"></div>
                                <figcaption class="caption-holder">
                                    <div class="caption-inner caption-middle text-center">
                                        <h5>@item.Name</h5>

                                    </div>
                                </figcaption>
                            </div>

                        </a>

                    </figure>

                </div>

            }
        </div>
        <div class="section-title text-center" style="margin-top: 80px;margin-bottom: 20px;">

            <h2>Today’s most popular deals</h2>

            <div class="container">


                <div class="row equal-height cols-2 cols-md-2 cols-lg-4 gap-10 gap-md-20 gap-xl-30">
                    @foreach (var item in Model.Blogs.Take(4))
                    {
                        <div class="col">

                            <figure class="featured-image-grid-item with-highlight">
                                <div class="image">
                                    <img src="~/Files/Images/Weblog/@item.image" alt="@item.Title">
                                </div>
                                <figcaption class="content">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="item-highlight text-secondary">
                                                Save up to<span>35%</span>
                                            </span>
                                        </div>
                                        @if (item.isnews)
                                        {
                                            <div>
                                                <span class="item-expire">News</span>
                                            </div>
                                        }

                                    </div>

                                    <p>@item.Title</p>
                                    <span class="act-as-btn text-secondary">Read More<i class="material-icons">arrow_forward</i></span>
                                </figcaption>
                                <a href="#" class="position-absolute-href"></a>
                            </figure>

                        </div>
                    }


                </div>

                <div class="mb-80"></div>



            </div>
        </div>

    </div>

</section>
<div class="bg-image cta-promo-list" data-white-overlay="3" id="bg-image">

    <div class="container position-relative" style="margin-top: -65px;">

        <div class="row">

            <div class="col-12 col-md-8 col-lg-8">

                <h2 class="heading-title">About Us</h2>

                <p class="font-lg" id="aboutus">
                    @Model.setting.Description
                </p>



            </div>

        </div>

    </div>

</div>
<section class="partners-wrapper border-top pv-60">
    <div class="container">
        <div class="d-md-flex justify-content-center">
            <img src="~/Home/images/image-logo-grid/20.png" class="image-partner" alt="Partners">
            <img src="~/Home/images/image-logo-grid/21.png" class="image-partner" alt="Partners">
            <img src="~/Home/images/image-logo-grid/22.png" class="image-partner" alt="Partners">
            <img src="~/Home/images/image-logo-grid/23.png" class="image-partner" alt="Partners">
            <img src="~/Home/images/image-logo-grid/25.png" class="image-partner" alt="Partners">
        </div>
    </div>
</section>
@section Scripts{
    <script type="text/javascript" src="~/Home/js/custom-core.js"></script>
    <script type="text/javascript" src="~/Home/js/plugins.js"></script>
    <script type="text/javascript" src="~/Home/js/plugins/jquery.typeahead.min.js"></script>
    <script type="text/javascript" src="~/Home/js/custom-autocomplete.js"></script>

    <script>
        function SumCount() {
            var countadult = parseInt($('#adult').val());
            var countbaybe = parseInt($('#child').val());
            var count = countadult + countbaybe;
            $('#count').val(count);
        }
        function GetDestination() {
            var id = $('#FromCity').val();
            $('#To').empty();
            $.ajax({
                url: "/Routes/GetDestination/",
                data: { id: id },
                type: "Get",
                cache: false,
                success: function (data) {
                    console.log(data);
                    $('#To').append(data);
                     $('#To').trigger("chosen:updated"); // for update select that is credential
                }
            });
        }
    </script>
}
